{
    "name": "First_Movie_DeepLearning",
    "n_gpu": 1,

    "arch": {
        "type": "KSYMovieModel",
        "args": {
            "layers" : [256, 64],
            "emb_dim" : 512
        }
    },
    "data_loader": {
        "type": "MovieDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 2048,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "movie_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 3,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
